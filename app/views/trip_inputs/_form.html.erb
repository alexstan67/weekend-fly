<%#= form_with(model: trip_input) do |f| %>
<%= form_with model: @trip_input, url: trip_inputs_create_path, data: { turbo: false } do |f| %>
  <% if trip_input.errors.any? %>
    <div class="alert-danger">
      <p><%= pluralize(trip_input.errors.count, "error") %> prohibited flight data from being processed:</p>
      <ul>
        <% trip_input.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>  
      </ul>
    </div>
  <% end %>
  <table>
    <tr>
      <td><%= f.label :airport_icao %></td>
      <td><%= f.collection_select :dep_airport_icao, Airport.order(:name), :icao, :name %></td>
    </tr>
    <tr>
      <td><%= f.label "departure in (hours)" %></td>
      <td><%= f.select :dep_in_hour, [1,2,3,4,5,6], { :selected => 3 } %></td>
    </tr>
    <tr>
      <td><%= f.label "distance (#{current_user.distance_unit})" %></td>
      <td><%= f.number_field :distance_nm, value: 50 %></td>
    </tr>
    <tr>
      <td><%= f.label "Estimated Enroute Time (min)" %></td>
      <td><%= f.number_field :eet_min, value: 120 %></td>
    </tr>
    <tr>
      <td><%= f.label "Average Ground Speed (kts)" %></td>
      <td><%= f.number_field :average_gs_kts, value: 100 %></td>
    </tr>
  </table>

  <%= f.submit "Next", class: "btn btn-primary" %>
<% end %>
